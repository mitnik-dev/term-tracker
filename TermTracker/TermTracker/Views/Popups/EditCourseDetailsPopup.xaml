<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
           x:Class="TermTracker.Views.Popups.EditCourseDetailsPopup">
    <Border BackgroundColor="{StaticResource BgLight}"
            Padding="20">
        <VerticalStackLayout Spacing="14" WidthRequest="280">
            <Label Text="Edit Course Details" Style="{StaticResource SectionHeaderText}"
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <Label Text="Course Name" Style="{StaticResource DefaultText}" />
            <Entry Text="{Binding Name}" Placeholder="Course name" />

            <Label Text="Status" Style="{StaticResource DefaultText}" />
            <Picker x:Name="StatusPicker"
                    SelectedIndex="{Binding StatusIndex}" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="Start Date" Style="{StaticResource DefaultText}" />
                    <DatePicker Date="{Binding StartDate}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="4">
                    <Label Text="End Date" Style="{StaticResource DefaultText}" />
                    <DatePicker Date="{Binding EndDate}" />
                </VerticalStackLayout>
            </Grid>

            <Label Text="Instructor Name" Style="{StaticResource DefaultText}" />
            <Entry Text="{Binding InstructorName}" Placeholder="Instructor name" />

            <Label Text="Instructor Phone" Style="{StaticResource DefaultText}" />
            <Entry Text="{Binding InstructorPhone}" Placeholder="555-1234" Keyboard="Telephone" />

            <Label Text="Instructor Email" Style="{StaticResource DefaultText}" />
            <Entry Text="{Binding InstructorEmail}" Placeholder="instructor@example.com" Keyboard="Email" />

            <Button Text="Delete Course"
                    BackgroundColor="{StaticResource Danger}"
                    TextColor="White"
                    Clicked="OnDeleteClicked"
                    Margin="0,10,0,0" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <Button Text="Cancel"
                        Clicked="OnCancelClicked"/>
                <Button Text="Save"
                        Clicked="OnSaveClicked"
                        Grid.Column="1"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
</mct:Popup>
