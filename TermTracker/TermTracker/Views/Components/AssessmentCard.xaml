<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TermTracker.Views.Components"
             x:Class="TermTracker.Views.Components.AssessmentCard">

    <Frame BackgroundColor="{StaticResource BgLight}"
           CornerRadius="12"
           BorderColor="{StaticResource BorderMuted}"
           Padding="16"
           HasShadow="False">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnFrameTapped" />
        </Frame.GestureRecognizers>

        <Grid ColumnDefinitions="60,12,*,Auto" RowDefinitions="Auto,Auto,Auto,12,Auto">
            
            <Frame x:Name="IconFrame"
                   BackgroundColor="{StaticResource Secondary}"
                   CornerRadius="30"
                   WidthRequest="60"
                   HeightRequest="60"
                   Padding="0"
                   HasShadow="False"
                   Grid.Row="0"
                   Grid.RowSpan="3"
                   Grid.Column="0"
                   VerticalOptions="Start"
                   HorizontalOptions="Start">
                <Image x:Name="TypeIcon"
                       Source="objective.png"
                       Aspect="AspectFit"
                       WidthRequest="36"
                       HeightRequest="36"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <VerticalStackLayout Grid.Row="0"
                                 Grid.Column="2"
                                 Grid.RowSpan="3"
                                 Spacing="4"
                                 VerticalOptions="Center">
                
                <Label x:Name="TypeLabel"
                       Text="Objective"
                       Style="{StaticResource MutedText}"
                       TextColor="{StaticResource TextMuted}"/>
                
                <Label x:Name="TitleLabel"
                       Text="Assessment Title"
                       Style="{StaticResource DefaultText}"/>
                
                <Label x:Name="DateRangeLabel"
                       Text="12/01/25 - 05/30/26"
                       Style="{StaticResource MutedText}"
                       TextColor="{StaticResource TextMuted}"/>
            </VerticalStackLayout>

            <Image Source="options_dark.png"
                   WidthRequest="16"
                   HeightRequest="16"
                   Aspect="AspectFit"
                   Grid.Row="0"
                   Grid.Column="3"
                   HorizontalOptions="End"
                   VerticalOptions="Start"/>

            <HorizontalStackLayout Grid.Row="4"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="4"
                                   Spacing="12"
                                   VerticalOptions="Center">
                
               
                
                <controls:ProgressBar x:Name="ProgressBar"
                                      AcademicType="Assessments"
                                      Progress="60"
                                      VerticalOptions="Center"
                                      Margin="0,0,0,0"/>
            </HorizontalStackLayout>
        </Grid>
    </Frame>
</ContentView>

