<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.Views.Components.ProgressCircle">
    <VerticalStackLayout>
        <Grid WidthRequest="90" HeightRequest="90">
            <GraphicsView x:Name="ProgressGraphicsView"
                      WidthRequest="90"
                      HeightRequest="90"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>
            <VerticalStackLayout 
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="4">
                <Image x:Name="IconImage"
                   WidthRequest="24"
                   HeightRequest="24"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

                <Label x:Name="PercentageLabel"
                   Text="0%"
                   FontSize="12"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Grid>
        
        <Label x:Name="TypeLabel" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentView>



