<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TermTracker.Views.Components"
             x:Class="TermTracker.Views.Components.CardCompact">
    
    <Frame BackgroundColor="{StaticResource BgLight}">
        
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnFrameTapped" />
        </Frame.GestureRecognizers>

        <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, *">
            <Label x:Name="TitleLabel"
                   Text="Database"
                   Style="{StaticResource SectionHeaderText}"
                   Grid.ColumnSpan="2"/>
           
            
            <Label x:Name="DateRange"
                   Text=" 12/01/25 - 12/21/25"
                   TextColor="{StaticResource TextMuted}"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"/>
            
            <controls:ButtonIndicator x:Name="ButtonIndicator"
                                      Status="Completed"
                                      Grid.Column="2"
                                      Grid.RowSpan="2"/>
        </Grid>
    </Frame>
</ContentView>

